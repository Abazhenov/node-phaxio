{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "assert": false,
    "expect": false,
    "describe": false,
    "it": false,
    "afterEach": false,
    "beforeEach": false,
    "before": false,
    "after": false
  },
  "rules": {
    "indent": ["error", 2 ],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": 1
  }
}
